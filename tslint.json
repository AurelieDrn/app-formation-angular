{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-sonarts",
    "tslint-angular"
  ],
  "lintOptions": {
    "defaultSeverity": "warning",
    "typeCheck": true
  },
  "rules": {
    "ban": false,
    "class-name": true,
    "max-line-length": {
      "options": [
        120
      ]
    },
    "comment-format": [
      true,
      "check-space",
      {
        "ignore-words": [
          "TODO",
          "HACK",
          "FIXME"
        ]
      }
    ],
    "quotemark": [
      true,
      "double"
    ],
    "curly": true,
    "forin": true,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "interface-over-type-literal": true,
    "jsdoc-format": false,
    "label-position": true,
    "member-access": [
      true,
      "check-accessor"
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "no-console": false,
    "no-debugger": false,
    "no-any": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-inferrable-types": false,
    "no-internal-module": true,
    "no-null-keyword": true,
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-switch-case-fall-through": false,
    "no-unused-expression": true,
    "no-unused-variable": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "ordered-imports": false,
    "object-literal-sort-keys": {
      "severity": "warning"
    },
    "radix": true,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "switch-default": true,
    "triple-equals": [
      true
    ],
    "typedef": [
      true,
      "call-signature",
      "member-variable-declaration",
      "property-declaration",
      "parameter"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}
